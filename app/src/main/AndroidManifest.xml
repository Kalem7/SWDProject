<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="pl.swd.kamil.swdproject" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
        <activity
            android:name=".activities.LocalizationActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ProductsActivity"
            android:label="@string/title_activity_products"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activities.RouteActivity"
            android:label="@string/title_activity_route"
            android:screenOrientation="landscape">
        </activity>
        <activity
            android:name=".activities.ShopDetailsActivity"
            android:label="@string/title_activity_shop_details"
            android:screenOrientation="landscape">
        </activity>
    </application>

</manifest>
